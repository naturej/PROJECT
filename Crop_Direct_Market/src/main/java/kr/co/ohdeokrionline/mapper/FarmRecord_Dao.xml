<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=
	"kr.co.ohdeokrionline.model.dao.FarmRecord_Dao">
	<insert id="insertFarminfo" parameterType="kr.co.ohdeokrionline.model.vo.FarmRecord_DTO">
		insert into 
		farminfo(farminfo,farm_add_code,farm_add,farm_add_de,farm_phon,pro_name,farm_comment,user_id)
		values(#{farminfo},#{farm_add_code},#{farm_add},#{farm_add_de},
			#{farm_phon},#{pro_name},#{farm_comment},#{user_id})
	</insert>

	<select id="farmInfo" resultType="kr.co.ohdeokrionline.model.vo.FarmRecord_DTO">
		select * from farminfo where user_id=#{user_id}
	</select>
	
	<update id="farmInfoUpdate">
		update farminfo
		set farminfo=#{farminfo},farm_add_code=#{farm_add_code},farm_add=#{farm_add},farm_add_de=#{farm_add_de},farm_phon=#{farm_phon},pro_name=#{pro_name},farm_comment=#{farm_comment}
		where user_id=#{user_id}
	</update>
</mapper>