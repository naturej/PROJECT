<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ohdeokrionline.model.dao.Message_Dao">
	<!-- 에누리 목록 -->
	<select id="enuList" resultType="kr.co.ohdeokrionline.model.vo.Enuri_DTO">
		SELECT * FROM ENURI ORDER BY ENU_IDX DESC
	</select>
	
	<!-- 에누리 상세보기 -->
	<select id="enuDetail" resultType="kr.co.ohdeokrionline.model.vo.Enuri_DTO">
		SELECT * FROM ENURI WHERE ENU_IDX=#{enu_idx}
	</select>
	
	<!-- 에누리 쓰기 -->
	<!-- 
			DB 테스트 쿼리문
		insert into enuri(bo_num,user_id,enu_content,enu_date,enu_quan,enu_price,enu_idx)
		values(6,'gathering11','안녕하세요',sysdate,1,100,enu_seq.nextval); 
	-->
	<insert id="enuInsert" parameterType="kr.co.ohdeokrionline.model.vo.Enuri_DTO">
		INSERT INTO ENURI(BO_NUM,USER_ID,ENU_CONTENT,ENU_DATE,ENU_QUAN,ENU_PRICE,ENU_IDX)
		VALUES(#{bo_num},#{user_id},#{enu_content},sysdate,#{enu_quan},#{enu_price},ENU_SEQ.NEXTVAL);
	</insert>
	
	<!-- 에누리 수락 (1) -->
	<update id="yesEnuri">
		UPDATE ENURI SET ENU_CONFIRM=1 WHERE ENU_IDX=#{enu_idx}
	</update>
	
	<!-- 에누리 거절 (2) -->
	<update id="noEnuri">
		UPDATE ENURI SET ENU_CONFIRM=2 WHERE ENU_IDX=#{enu_idx}
	</update>
	
	<!-- 장바구니에 넣기 -->
</mapper>
