<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ohdeokrionline.model.dao.SaleBoard_Dao">
	<!-- 6번 글 전용 테스트 쿼리 -->
	<select id="salDetail" resultType="kr.co.ohdeokrionline.model.vo.SaleBoard_DTO"><!-- 테스트용 상세보기 쿼리 -->
		SELECT * FROM SALBOARD WHERE BO_NUM= 6
	</select>
	<insert id="insertEnuri" parameterType="kr.co.ohdeokrionline.model.vo.Enuri_DTO"><!-- 테스트용 상세보기 쿼리 -->
		INSERT INTO ENURI(BO_NUM, USER_ID,ENU_CONTENT, ENU_QUAN, ENU_PRICE, ENU_IDX) 
			VALUES(#{bo_num} ,	#{user_id} ,#{enu_content} ,#{enu_quan} ,#{enu_price} ,	ENU_SEQ.NEXTVAL )
	</insert>
</mapper>